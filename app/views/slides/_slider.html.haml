#slider1_container
  #carousel.carousel.slide.carousel-fade{"data-ride" => "carousel"}
    %ol.carousel-indicators
      - if slides.count > 1
        - slides.each_with_index do |slide, i|
          %li.active{"data-slide-to" => i+1, "data-target" => "#carousel"}
      
    / Carousel items
    .carousel-inner
      - slides.each do |slide|
        .item
          = image_tag slide.image(:slide_size), :id => "slide-"+ slide.id.to_s
    / Carousel nav
    = link_to  "#carousel", :class => "carousel-control left", "data-slide" => "prev" do
      = image_tag 'next-icon.png'
    = link_to  "#carousel", :class => "carousel-control right", "data-slide" => "next" do
      
      = image_tag 'prev-icon.png'
    
  -#
    #wrapper
      - if slides.count > 1
        #zoom-slider  
          - slides.each do |slide|
            = image_tag slide.image(:slide_size), :id => "slide-"+ slide.id.to_s
      - else
        .col-xs-12.one-slide{:style => "padding:0; position: initial;"}
          - slides.each do |slide|
            = image_tag slide.image(:slide_size), :id => "slide-"+ slide.id.to_s

  
 
:javascript 
  $('.carousel').carousel();
  $('#carousel .carousel-inner :first').addClass('active');   

