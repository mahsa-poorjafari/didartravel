.margin3
  %h3.title-tours{:class => I18n.locale}
    =link_to @sight.city.country.title , @sight.city.country
    , 
    =link_to @sight.city.title , @sight.city
    , 
    =link_to  @sight.title , @sight
    
  - if is_admin?
    = link_to 'ویرایش', edit_sight_path(@sight), :class => "btn btn-info" 
  .tour-details
    .col-xs-7.sight-des{:class => I18n.locale}=raw @sight.text        
    .col-xs-5
      -if @sight.photos.present?
        - @sight.photos.each do |pic|
          = link_to pic.image(:original), :class => "example-image-link show-product", "data-lightbox" => "example-1", "data-title" => @sight.title do         
            = image_tag pic.image(:medium), :title => "آژانس_هواپیمایی_دیدار", :alt =>  "آژانس_هواپیمایی_رادان_دیدار ", :class => "example-image"
    
      
  
  
 
