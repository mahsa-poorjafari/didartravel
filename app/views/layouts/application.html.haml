    = favicon_link_tag 'favicon.png', rel:'shortcut icon', type: 'image/png', :title => "آژانس هواپیمایی رادان سیر"

  %body
    .main{:class => I18n.locale}
      .main-menu.col-xs-12
        
        .top-of-menu.col-xs-12
          .col-xs-7.pull-right
            %p.site-title{:class => I18n.locale}= t("didartravel")
          .col-xs-2{:class => I18n.locale}
            .flag_bar
              = link_to (image_tag 'flag/en_sm.png'), '#'
              = link_to (image_tag 'flag/ir_sm.png'), '#'
              = link_to (image_tag 'flag/ar_sm.png'), '#'
          
          .col-xs-2{:class => I18n.locale}
            #search
              = form_tag "http://google.com/search", method: "get",  :target=> "_blank", :class => "contact-form", :id => "contact-form" do
                .search_on_google
                  .google-field= text_field_tag :q, '', placeholder: 'جستجو در گوگل',  :class => I18n.locale
                  .google-submit
                    =image_submit_tag 'search.png', :name => "sa",  :class => I18n.locale


          
        .col-xs-12.logo-center{:class => I18n.locale}
          = render 'shared/menu_bar'
        
        .bottom-of-menu.col-xs-12
          
        
      - if @page_slides.present?
        = render "slides/slider", :slides => @page_slides
      - elsif @other_slides.present?
        = render "slides/slider", :slides => @other_slides
      - else
        = render "slides/slider", :slides => Slide.all      
      
      .col-xs-12.bottom-slider
        -#
          = render 'shared/weather'
     
      -#
        - if current_page?('/') 
          = render 'shared/four_main_icon'
      - if current_page?(Sight) 
        = render 'sights/five_sight_icon'
      - if params[:controller] == 'hotels'
        = render 'shared/multi_slider_hotel'
      - elsif params[:controller] == 'sights'
        = render 'shared/multi_slider_visit_iran'
      - else
        = render 'shared/multi_slider_search_tour', :tours => Tour.all
      = link_to '', '#', :name => "#top", :id => "page-top", :title => "آژانس هواپیمایی رادان سیر"
      .yield.clear-float{:class => I18n.locale}
