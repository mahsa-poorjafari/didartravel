              = t ('send-mail')          
          .modal-body
            = render 'send_links/form'
          .modal-footer
            %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close
    .show-social      
      .col-xs-12.set-center{:style => "left:0;position: absolute; top:5%; padding-left:4%"}
        .social-icon
          = link_to '#', :target => "_blank" do
            .col-xs-4{:style => "padding:0"}= image_tag 'f.png', :title => "آژانس_هواپیمایی_رادان_سیر", :alt=> "آژانس_هواپیمایی_رادان_سیر"
