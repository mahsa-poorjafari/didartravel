%html
  %head
    %title 
      = t("didartravel") + (' Travel| سفر, بلیت, ایران, ویزا, visa, آژانس, آژانس هواپیمایی| iran travel| travle agency| ticket| visit iran| iran sights') 
    = stylesheet_link_tag    'application', media: 'all'  
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %meta{:charset => "utf-8"}    
    %meta{:name => "keywords", :content =>   "آژانس هواپیمایی دیدار, دیدار, سفر, مسافرت, ویزا,  تورهای لحظه ای, تورهای خارجی"}
    %meta{:name => "robots", :content => "NoIndex,follow"}
    %meta{:name => "googlebot", :content => "noarchive"}
    %meta{:name => "slurp", :content => "NoIndex,follow"}
    %meta{:name => "msnbot", :content => "NoIndex,follow"}
    %meta{:name => "teoma", :content => "NoIndex,follow"}    
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
    %meta{content: "no", "http-equiv" => "imagetoolbar"}
    %meta{:content => "Raush Co", :name => "author"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "true", :name => "HandheldFriendly"}/
    %meta{:content => "width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no", :name => "viewport"}/
    
    = yield(:refresh_meta) if content_for?(:refresh_meta)
    = favicon_link_tag 'favicon.png', rel:'shortcut icon', type: 'image/png'

  %body
    .main{:class => I18n.locale}
      .main-menu.col-xs-12
        
        .top-of-menu.col-xs-12
          .col-xs-4.pull-right
            - if I18n.locale == :fa
              .col-xs-12.pull-right{:style => "padding:0"}
                %p.site-title{:class => I18n.locale}= t("didartravel-part1")
              .clear-float
              .col-xs-7.pull-left{:style => "padding:0"}
                %p.site-title{:class => I18n.locale}= t("didartravel-part2")              
            - else
              %p.site-title{:class => I18n.locale}= t("didartravel")
          .col-xs-4.pull-right
            .col-xs-12.menu-side.logo-side
          .col-xs-4{:class => I18n.locale}
            .flag_bar
              = link_to (image_tag 'flag/en_sm.png'), '#', {"data-toggle" => "tooltip", "data-placement" => "bottom", :title => 'English'}
              = link_to (image_tag 'flag/ir_sm.png'), '#',{"data-toggle" => "tooltip", "data-placement" => "bottom", :title => 'فارسی'}
              = link_to (image_tag 'flag/ar_sm.png'), '#', {"data-toggle" => "tooltip", "data-placement" => "bottom", :title => 'العربية'}
          
          

          
        .col-xs-12.logo-center{:class => I18n.locale}
          = render 'shared/menu_bar'
        
        .bottom-of-menu.col-xs-12
          
        
      - if @page_slides.present?
        = render "slides/slider", :slides => @page_slides
      - elsif @other_slides.present?
        = render "slides/slider", :slides => @other_slides
      - else
        = render "slides/slider", :slides => Slide.all      
      
      .col-xs-12.bottom-slider
        
     
      
      - if current_page?('/') 
        = render 'shared/multislider_news_weather', :tours => Tour.all
        
      - if current_page?(Sight) 
        = render 'sights/five_sight_icon'
      - if params[:controller] == 'hotels'
        = render 'shared/multi_slider_hotel'
      - elsif params[:controller] == 'sights'
        = render 'shared/multi_slider_visit_iran'
      
      = link_to '', '#', :name => "#top", :id => "page-top"
      .yield.clear-float{:class => I18n.locale}
        = link_to '', '#', :name => "yield", :id => "yieldAnchor"
        = yield
        
        - if current_page?('/') 
          .keywords
            %p= t('Keywords.title')
            %ul.tag-cloud.full-width{:class => I18n.locale}
              %li.tag-cloud
                = link_to t('didartravel'), '/' 
              %li.tag-cloud
                = link_to t('Keywords.a'), '/' 
              %li.tag-cloud
                = link_to t('Keywords.b'), '/'              
              %li.tag-cloud
                = link_to t('Keywords.s'), '/' 
              %li.tag-cloud
                = link_to t('Keywords.w'), '/' 
              %li.tag-cloud
                = link_to t('Keywords.c'), '/' 
              %li.tag-cloud
                = link_to t('Keywords.d'), '/' 
              %li.tag-cloud
                = link_to t('Keywords.f'), '/' 
              %li.tag-cloud
                = link_to t('Keywords.g'), '/' 
              %li.tag-cloud
                = link_to t('Keywords.h'), Sight
              %li.tag-cloud
                = link_to t('Keywords.l'), Sight
              %li.tag-cloud
                = link_to t('Keywords.m'), Sight
              %li.tag-cloud
                = link_to t('Keywords.n'), Sight
              %li.tag-cloud
                = link_to t('Keywords.e'), '/' 
              %li.tag-cloud
                = link_to t('Keywords.p'), '/' 
      
         
      .footer.col-xs-12 
        = render 'shared/footer'
      .national-certificate        
        %h4.title-certificate{:class => I18n.locale}= t('national-certificate')   
          
    .modal.fade.bs-example-modal-sm{"aria-hidden" => "true", "aria-labelledby" => "mySmallModalLabel", role: "dialog", tabindex: "-1"}
      .modal-dialog.modal-sm
        .modal-content
          .modal-header
            %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} ×
            %h4#myModalLabel.modal-title 
              = t ('send-mail')          
          .modal-body
            = render 'send_links/form'
          .modal-footer
            %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close
    .show-social      
      .col-xs-12.set-center{:style => "left:0;position: absolute; top:5%; padding-left:4%"}
        .social-icon
          = link_to '#', :target => "_blank" do
            .col-xs-4{:style => "padding:0"}= image_tag 'f.png'
            %span.col-xs-7{:class => I18n.locale, :style => "padding:0; text-align:left"}= t('facebook')
        .social-icon.clear-float
          = image_tag 'l.png'
          %span{:class => I18n.locale}= t('linkedin')
        .social-icon
          = image_tag 'g.png'
          %span{:class => I18n.locale}= t('googleplus')
        .social-icon
          = image_tag 't.png'
          %span{:class => I18n.locale}= t('twitter')
           
    - if is_admin?
      .admin-menu
        = render 'shared/admin_menu'
    
    = link_to '#top', :id => "go-top-page", :class => "anchorLink"do
      = image_tag 'gotop.png', :title => "بازگشت به بالای صفحه"
       
  - unless current_page?('/') 
    
    :javascript
      $(document).ready(function() {
        $('html, body').animate({ scrollTop: 600 }, 'slow'); 
      });
  :javascript  
    $('.carousel').carousel();
    $('#carousel .carousel-inner :first').addClass('active');   


    $('.carousel[data-type="multi"] .item').each(function(){
      var next = $(this).next();
      if (!next.length) {
        next = $(this).siblings(':first');
      }
      next.children(':first-child').clone().appendTo($(this));
      
      for (var i=1;i<2;i++) {
        next=next.next();
        if (!next.length) {
          next = $(this).siblings(':first');
        }
        
        next.children(':first-child').clone().appendTo($(this));
      }
    });
    $('#package-tour1 :first').addClass('active');   
    $('#package-tour2 :first').addClass('active');
    
    $('a#go-top-page').smoothScroll();
    $('#datepicker7').datepicker();      
    
