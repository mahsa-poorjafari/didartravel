.margin3.margin-bottom
  .col-xs-12        
    %p.col-xs-12.set-center.title-tour#visa-form.pull-left{:class => I18n.locale}= t('visa-app')
      
      
  .avoid-this.col-xs-12{:style => "text-align:center"}    
    = image_tag 'Iran.jpg'

  
  .col-xs-12#date-logo
    .pull-left.col-xs-2= image_tag 'menu_logo.png', :width => "120", :height => "80"
    .pull-right.col-xs-4  
      %p
        %b='تاریخ:'
        %span{:class => I18n.locale}= JalaliDate.new(@visa_form.created_at)
      %p
        %b='کدرهگیری:'
        %span= @visa_form.request_code
  .col-xs-12.margin-bottom{:style => "text-align:center"}
    %b='درخواست ویزای ایران'
  .col-xs-12
    -if flash[:CodeSend]
      .avoid-this.alert.alert-success{:style => "font-size:16px; text-align:center"}  
        = flash[:CodeSend]
    .avoid-this.alert.alert-info{:class => I18n.locale, :style => "font-size:20px; text-align:center;"}
      %b= t('passenger.request-code')
      .en= @visa_form.request_code
  .col-xs-2.avoid-this.pull-right
    #go-printa4
      = image_tag 'print-icon.png'
      %h4= link_to 'پرینت A4', 'printa4_visa_forms_path' , :remote => 'true'
  .col-xs-12#host_info.margin-bottom5{:class => I18n.locale}
    %h4= t('host.info')
    - if @visa_form.hosts.present?
      - @visa_form.hosts.each do |host|
        .col-xs-8.pull-right
          .col-xs-3= t('host.name') + ' و ' + t('host.last_name')
          .col-xs-3.b= host.name + ' ' + host.last_name
          .col-xs-3= t('host.father_name')
          .col-xs-3.b= host.father_name
          .col-xs-3= t('host.id_shenasname')
          .col-xs-3.b= host.id_shenasname
          .col-xs-3= t('host.birth_date')
          .col-xs-3.b= host.birth_date
          .col-xs-3= t('host.birth_place')
          .col-xs-3.b= host.birth_place
          .col-xs-3= t('host.id_nationality_card')
          .col-xs-3.b= host.id_nationality_card        
          .col-xs-3= t('host.job')
          .col-xs-3.b= host.job
          .clear-float
          .col-xs-3= t('host.email')
          .col-xs-4.b= host.email
          .clear-float
          .col-xs-3= t('host.residence_address')
          .col-xs-4.b= host.residence_address
          .clear-float
          .col-xs-3= t('host.residence_phone')
          .col-xs-4.b= host.residence_phone
          .clear-float
          .col-xs-3= t('host.work_address')
          .col-xs-4.b= host.work_address
          .clear-float
          .col-xs-3= t('host.work_phone')
          .col-xs-4.b= host.work_phone       
        .col-xs-4
          - if host.id_card_copy.present?
            = image_tag host.id_card_copy(:small)
        -#
          - if is_admin?
            
              = link_to 'مشاهده', passenger, :class => "btn btn-warning"
              = link_to 'ویرایش', edit_passenger_path(passenger), :class => "btn btn-info"
              = link_to 'حذف', passenger, :method => :delete, :data => { :confirm => 'آیا مطمئن هستید؟' }, :class => "btn btn-danger"
  .col-xs-12#passenger_info.margin-bottom{:class => I18n.locale}
    %h4= t('passenger.info')
    - if @visa_form.passengers.present?
      - @visa_form.passengers.each do |passenger|
        .col-xs-8.pull-right
          .col-xs-3= t('passenger.First_Name') + ' و ' + t('passenger.Last_Name')
          .col-xs-3.b= passenger.First_Name + ' ' + passenger.Last_Name
          .col-xs-3= t('passenger.gender')
          .col-xs-3.b
            - if I18n.locale == :fa || I18n.locale == :ar
              - if passenger.gender == 'female'
                مونث
              - elsif passenger.gender == 'male'
                مذکر
            - else            
              = passenger.gender
          .col-xs-3= t('passenger.Fathers_Name')
          .col-xs-3.b= passenger.Fathers_Name
          .col-xs-3= t('passenger.Marital_status')
          .col-xs-3.b= passenger.Marital_status
          .col-xs-3= t('passenger.Date_of_Birth')
          .col-xs-3.b= passenger.Date_of_Birth
          .col-xs-3= t('passenger.Birth_Place')
          .col-xs-3.b= passenger.Birth_Place
          .col-xs-3= t('passenger.Nationality')
          .col-xs-3.b= passenger.Nationality
          .col-xs-3= t('passenger.Nationality')
          .col-xs-3.b= passenger.Nationality        
          .col-xs-3= t('passenger.Passport_No')
          .col-xs-3.b= passenger.Passport_No
          .col-xs-3= t('passenger.relationship')
          .col-xs-3.b= passenger.relationship
          .col-xs-3= t('passenger.Email')
          .col-xs-4.b= passenger.Email
        .col-xs-4
          - if passenger.passport_copy.present?
            = image_tag passenger.passport_copy(:small)  
          
        .col-xs-12
          .col-xs-3= t('passenger.obtain_visa_place')
          .col-xs-3.b= passenger.obtain_visa_place
          .col-xs-3= t('passenger.Where_collect_your_visa')
          .col-xs-3.b= passenger.Where_collect_your_visa
          .col-xs-3= t('passenger.Travel_Entrance_To_Iran')
          .col-xs-3.b= passenger.Travel_Entrance_To_Iran
          .col-xs-3= t('passenger.Times_Have_You_Been_To_Iran')
          .col-xs-3.b= passenger.Times_Have_You_Been_To_Iran
          .col-xs-3= t('passenger.date_of_Your_Last_Visit_To_Iran')
          .col-xs-3.b= passenger.date_of_Your_Last_Visit_To_Iran
          .clear-float
          .col-xs-4= t('passenger.Address_phone_Guest_accommodations')
          .col-xs-4.b{:class => I18n.locale}= raw passenger.Address_phone_Guest_accommodations
        
            
            
  .col-xs-12.margin-bottom5#agreement_show{:class => I18n.locale}  
    .col-xs-1= 'اینجانب'
    .col-xs-2.b= @visa_form.einjaneb_form
    .col-xs-9= 'متقاضي درخواست رواديد متعهد مي شوم نامبرده در طول مدت اقامت در ايران مسائل اخلاقي و شئونات اسلامي و قوانين و مقررات جمهوري اسلامي را رعايت نموده و مطالب فوق را به دقت و صداقت تكميل شده و مسئوليت هرگونه اشتباه به عهده اينجانب مي باشد .'
  
  .col-xs-12.margin-bottom5#signture
    .col-xs-1  
    .col-xs-4  
      %b= 'تاریخ و امضا میزبان'
    .col-xs-4    
      %b= 'امضاء و مهر خدمات مسافرتي و جهانگردي '
    .col-xs-1  
  %hr.margin-bottom5
  .col-xs-12.margin-bottom5#commitment_show{:class => I18n.locale}
    %h4= t('Commitment')    
    .col-xs-2= 'بدینوسیله اینجانب'
    .col-xs-2.b= @visa_form.commitment_full_name
    .col-xs-1= 'جنسیت'
    .col-xs-1.b
      - if I18n.locale == :fa || I18n.locale == :ar
        - if @visa_form.commitment_gender == 'female'
          مونث
        - elsif @visa_form.commitment_gender == 'male'
          مذکر
      - else
        = @visa_form.commitment_gender
    .col-xs-1= 'فرزند'
    .col-xs-1.b= @visa_form.commitment_father_name
    .col-xs-2= 'به شماره شناسنامه'
    .col-xs-2.b= @visa_form.commitment_id_shenasname
    .col-xs-1= 'ساکن'
    .col-xs-2.b= @visa_form.commitment_residence_add
    .col-xs-10
      %p{:style => "line-height:2.5em", :class => I18n.locale}= 'گواهي مي دهم نامبردگان ذيل كه به دعوت دفتر خدمات مسافرتي ديدار به ايران سفر خواهند كرد به درخواست اينجانب دعوت مي شوند و متعهد مي شوم دعوت شدگان پس از پايان مدت ويزاي خود در زمان مقرر از ايران خارج شوند و هيچگونه مشكلي براي دفتر خدماتي مسافرتي ديدار بوجود نياورد و اينجانب مسئوليت برگشت آنها را قبول مي كنم و در صورت بروز مشكل جوابگوي خسارت احتمالي به اين دفتر مي باشم. ضمناً متعهد مي شوم كه پس از خروج مسافر از ايران كپي مهر خروج مسافر را در اولين فرصت به دفتر خدمات مسافرتي ديدار تحويل نمايم.'
    .clear-float
    .col-xs-3.b= 'لیست دعوت شدگان'
    .clear-float
    .col-xs-10{:class => I18n.locale}= raw @visa_form.guest_names
    .clear-float
  .col-xs-12
    .col-xs-4
      %b= 'نام و امضای متعهد'

