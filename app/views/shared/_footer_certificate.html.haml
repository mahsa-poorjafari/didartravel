      

- @certificates = Certificate.all
.didar-certificates
  - @certificates.each do |certificate|
    .certificate-box{"data-toggle" => "tooltip", "data-placement" => "bottom", "title" => certificate.title}
      = image_tag certificate.image(:small), :width => "100"

:javascript
  $(document).ready(function() {
    $(".didar-certificates").smoothDivScroll({ 
      autoScrollingMode: "always", 
      autoScrollingDirection: "endlessLoopRight", 
      autoScrollingStep: 1, 
      autoScrollingInterval: 25 
    });

    // Logo parade event handlers
    $(".didar-certificates").bind("mouseover", function() {
      $(this).smoothDivScroll("stopAutoScrolling");
    }).bind("mouseout", function() {
      $(this).smoothDivScroll("startAutoScrolling");
    });

  });
