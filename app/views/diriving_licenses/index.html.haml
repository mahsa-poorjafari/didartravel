.margin3.margin-bottom
  -if is_admin?
    = link_to 'معرفی آیتم جدید', new_diriving_license_path, :class => "btn btn-success"
  .col-xs-12.margin-bottom
    .title-tour-line.col-xs-10
    %p.col-xs-12.set-center.title-tour#title-certificate{:class => I18n.locale}= t('national-certificate')
    
  .show-tours.col-xs-12.set-center
    - @diriving_licenses.each do |diriving_license|
      .tours-index#diriving_license{ :style => "width:23%"}                
        = link_to diriving_license, :class => "tour-box" do 
          %h5.tour-title{:class => I18n.locale}= diriving_license.title
          
          .clear-float
       
        -if is_admin?
          .admin-btn-tour
            = link_to 'ویرایش آیتم', edit_diriving_license_path(diriving_license), :class => "btn btn-info"
            = link_to 'مشاهده جزئیات', diriving_license, :class => "btn btn-warning"                   
            = link_to 'حذف آیتم', diriving_license, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger"
           

  
  .keywords
    %p= t('Keywords.title')
    %ul.tag-cloud.full-width{:class => I18n.locale}
      %li.tag-cloud
        = link_to t('didartravel'), '/'           
      %li.tag-cloud
        = link_to t('Keywords.a'), '/'    
      %li.tag-cloud
        = link_to t('Keywords.b'), '/'    
      %li.tag-cloud
        = link_to t('Keywords.f'), '/'    
      %li.tag-cloud
        = link_to t('Keywords.ir-package'), '/' 
      %li.tag-cloud
        = link_to t('tour-to-iran'), '/' 
      
      - Tour.all.limit(5).each do |tour|
        %li.tag-cloud
          = link_to tour.title, tour, :title => tour.title
