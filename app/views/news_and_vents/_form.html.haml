= form_for @news_and_vent, :html => { :multipart => true  } do |f|
  - if @news_and_vent.errors.any?
    #error_explanation      
      %ul
        - @news_and_vent.errors.each do |attr, msg|
          %li= msg
  .col-xs-12
    .col-xs-6
      .form-group
        = f.label 'تصویر', :class => "control-label"
        - if @news_and_vent.image.present?
          = image_tag @news_and_vent.image(:small)
        = f.file_field :image, :class => "form-control"
      .form-group
        = f.label 'لینک سایت منبا', :class => "control-label"
        = f.text_field :web_link, :class => "form-control", :placeholder => 'www.example.com'
      .form-group
        = f.label 'منبا خبر', :class => "control-label"
        = f.text_field :source, :class => "form-control"
    .col-xs-6
      .form-group
        = f.label 'عنوان فارسی', :class => "control-label"
        = f.text_field :title_fa, :class => "form-control"
      .form-group
        = f.label 'عنوان انگلیسی', :class => "control-label"
        = f.text_field :title_en, :class => "form-control"
      .form-group
        = f.label 'عنوان عربی', :class => "control-label"
        = f.text_field :title_ar, :class => "form-control"
  .col-xs-12
    .form-group
      = f.label 'متن فارسی', :class => "control-label"
      .editor
        = f.text_area :text_fa, :class => "ckeditor"
    .form-group
      = f.label 'متن انگلیسی', :class => "control-label"
      .editor
        = f.text_area :text_en, :class => "ckeditor"
    .form-group
      = f.label 'متن عربی', :class => "control-label"
      .editor
        = f.text_area :text_ar, :class => "ckeditor"
    .form-group
      = f.submit 'ثبت', :class => "btn btn-primary"
  
